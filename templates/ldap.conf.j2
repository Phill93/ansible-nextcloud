#
# LDAP Defaults
#

# See ldap.conf(5) for details
# This file should be world readable but not world writable.

BASE    {{ nextcloud_ldaps_base }}
URI     {{ nextcloud_ldaps_hosts }}

#SIZELIMIT      12
#TIMELIMIT      15
#DEREF          never

TLS_CACERTDIR   {{ nextcloud_ldaps_tls_cacertdir }}

# Turning this off breaks GSSAPI used with krb5 when rdns = false
SASL_NOCANON    on

TLS_REQCERT demand
